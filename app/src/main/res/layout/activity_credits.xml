<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.eat_soon.Credits">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tv1_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="Sundeep D"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            />



        <ImageView
            android:id="@+id/img2_usercredit"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/images"
            android:layout_below="@id/tv1_name"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="10dp"
            />


        <TextView
            android:id="@+id/tv2_line0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img2_usercredit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:text="Buy here to get 25 extra credits! "
            android:textSize="22sp" />


        <LinearLayout
            android:id="@+id/first"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tv2_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/bb"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_marginLeft="20dp"
                android:layout_height="40dp"
                android:src="@drawable/med"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_marginLeft="20dp"
                android:layout_height="40dp"
                android:src="@drawable/farm"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_marginLeft="20dp"
                android:layout_height="40dp"
                android:src="@drawable/grofers"
                />




        </LinearLayout>

        <TextView
            android:id="@+id/tv2_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img2_usercredit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:text="Buy here to get 25 extra credits! "
            android:textSize="22sp" />


        <LinearLayout
            android:id="@+id/pics"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tv2_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/bb"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_marginLeft="20dp"
                android:layout_height="40dp"
                android:src="@drawable/med"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_marginLeft="20dp"
                android:layout_height="40dp"
                android:src="@drawable/farm"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_marginLeft="20dp"
                android:layout_height="40dp"
                android:src="@drawable/grofers"
                />





        </LinearLayout>
        <TextView
            android:id="@+id/tv2_line2345"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img2_usercredit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:textStyle="bold"
            android:text="Get 5 extra credits for every product addition "
            android:layout_marginLeft="60dp"
            android:textSize="22sp" />
        <LinearLayout
            android:id="@+id/picswerf"
            android:layout_marginTop="170dp"
            android:layout_below="@id/tv2_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/milk"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_marginLeft="20dp"
                android:layout_height="40dp"
                android:src="@drawable/sweets"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_marginLeft="20dp"
                android:layout_height="40dp"
                android:src="@drawable/juice"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_marginLeft="20dp"
                android:layout_height="40dp"
                android:src="@drawable/dairy"
                />





        </LinearLayout>



        <TextView
            android:id="@+id/tv3_credits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img2_usercredit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="64dp"
            android:text="35"
            android:textSize="75sp"
            android:textStyle="bold"
            android:fontFamily="cursive"/>

        <TextView
            android:id="@+id/tv4_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/tv5_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img2_usercredit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="37dp"
            android:text="Earned Points"
            android:textSize="20sp"/>
    </RelativeLayout>
</ScrollView>
</android.support.constraint.ConstraintLayout>
