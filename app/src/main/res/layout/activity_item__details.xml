<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.eat_soon.Item_Details"

    >


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/app_bar_layout"

        android:layout_height="wrap_content"
        android:theme="@style/AppTheme"
        android:fitsSystemWindows="true"
        >

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary"
            android:fitsSystemWindows="true"
            
            >
            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_collapseMode="parallax"

                android:scaleType="centerCrop"
                android:contentDescription="123643716471234"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/tool_bar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:title="Hello World"
                app:layout_collapseMode="pin">




            </android.support.v7.widget.Toolbar>
            
            
            

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        app:contentScrim="?attr/colorPrimary"
        app:expandedTitleTextAppearance="@android:color/transparent"
        android:fitsSystemWindows="true"
        
        >
        
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">
            
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_height="60dp"
                    >

                    <TextView
                        android:id="@+id/pp0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:textSize="15sp"
                        android:layout_margin="6dp"
                        android:textStyle="italic"
                        android:text="Product ID"/>

                    <TextView

                        android:id="@+id/pro_id"
                        android:layout_marginLeft="150dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#835f5f"
                        android:textSize="20sp"
                        android:layout_marginTop="6dp"
                        android:textStyle="bold|italic"
                        android:background="#cebfbf"
                        android:maxLines="1"
                        android:text="5455561"

                        />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="1dp"
                    android:layout_height="60dp"
                    >

                    <TextView
                        android:id="@+id/pp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:textSize="15sp"
                        android:layout_margin="6dp"
                        android:textStyle="italic"
                        android:text="Product Name"/>

                    <TextView

                        android:id="@+id/pro_name"
                        android:layout_marginLeft="150dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#835f5f"
                        android:textSize="30sp"
                       android:layout_marginTop="2dp"
                        android:textStyle="bold|italic"
                        android:text="Lifeboy Soap"
                        android:maxLines="1"

                        />


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    >

                    <TextView
                        android:id="@+id/pp2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:textSize="15sp"
                        android:layout_margin="6dp"
                        android:textStyle="italic"
                        android:text="Product Type"/>

                    <TextView

                        android:id="@+id/pro_type"
                        android:layout_marginLeft="150dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#835f5f"
                        android:textSize="25sp"
                        android:layout_marginTop="2dp"
                        android:textStyle="italic"
                        android:text="Milk"/>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    >

                    <TextView
                        android:id="@+id/pp3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:textSize="15sp"
                        android:layout_margin="6dp"
                        android:textStyle="italic"
                        android:text="Expiry Date"/>

                    <TextView

                        android:id="@+id/pro_expiry_date"
                        android:layout_marginLeft="150dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#835f5f"
                        android:textSize="22sp"
                        android:layout_marginTop="2dp"
                        android:textStyle="italic"
                        android:text="12-12-2019"/>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    >

                    <TextView
                        android:id="@+id/pp4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:textSize="15sp"
                        android:layout_margin="6dp"
                        android:textStyle="italic"
                        android:text="Description"/>

                    <TextView
                        android:id="@+id/pro_desc"

                        android:layout_marginLeft="150dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#835f5f"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"
                        android:textStyle="italic"
                        android:maxLines="1"
                        android:text="I love Apples very much"/>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    >
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/ima"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="R E M O V E"
                    android:textStyle="bold"
                    android:textColor="#e70000"
                    android:onClick="delete"
                    android:visibility="invisible"

                    />
                </RelativeLayout>



            </LinearLayout>

        </android.support.v7.widget.CardView>









    </android.support.v4.widget.NestedScrollView>

    
    <android.support.design.widget.FloatingActionButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/cool"


        android:id="@+id/float_type"
        app:pressedTranslationZ="12dp"
        app:layout_anchor="@id/app_bar_layout"
        app:layout_anchorGravity="bottom|right|end"

        />


</android.support.design.widget.CoordinatorLayout>
