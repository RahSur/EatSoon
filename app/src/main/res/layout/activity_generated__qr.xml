<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.eatsoonceg.Generated_QR">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QR FOR THE PRODUCT"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="30sp"
        android:fontFamily="monospace"
        android:textColor="#050404"
        />
        <ImageView
            android:id="@+id/qr"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="This is your QR Code for your product.You can make use of this by pasting in the particular product"/>
<Button
    android:layout_width="190dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:text="Back to Main Screen"
    android:layout_marginTop="30dp"
    android:background="#2e2d2d"
    android:textColor="#ffffff"
    android:onClick="goto_main"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
