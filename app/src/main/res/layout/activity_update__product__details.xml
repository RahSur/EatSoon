<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.eat_soon.Update_Product_Details">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/appback_eatsoon_"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/logo"
        android:src="@drawable/logo"
        android:scaleType="fitCenter"
            android:layout_gravity="center"

        />
        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="3dp"-->
            <!--android:background="@drawable/appback"/>-->
    </LinearLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="100dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <ImageView
            android:id="@+id/insert_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/insert"
            android:scaleType="centerInside"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"

            />
        <TextView
            android:textStyle="bold"
            android:id="@+id/product_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product ID"
            android:layout_below="@id/insert_image"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:textColor="#463d3d"
            />
        <EditText
            android:textStyle="bold"
            android:id="@+id/product_id_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/product_id"
            android:layout_below="@id/insert_image"
            android:hint="Product Id"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="8dp"/>
        <TextView
            android:textStyle="bold"
            android:textColor="#463d3d"
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:layout_below="@id/product_id"
            android:layout_marginTop="50dp"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            />
        <EditText
            android:id="@+id/product_name_edittext"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/product_id"
            android:layout_below="@id/product_id_edittext"
            android:hint="Product Name"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:textStyle="bold"/>

        <TextView

            android:id="@+id/expiry_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expiry Date"
            android:layout_below="@id/product_name"
            android:layout_marginTop="50dp"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            />




        <!--<Spinner-->
            <!--android:id="@+id/spinner_day"-->
            <!--android:layout_width="40dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_toRightOf="@id/product_id"-->
            <!--android:layout_below="@id/product_name_edittext"-->

            <!--android:layout_marginLeft="50dp"-->
            <!--android:layout_marginTop="8dp"/>-->
        <!--<Spinner-->
            <!--android:id="@+id/spinner_month"-->
            <!--android:layout_width="60dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_toRightOf="@id/spinner_day"-->
            <!--android:layout_below="@id/product_name_edittext"-->

            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_marginTop="8dp"/>-->
        <!--<Spinner-->
            <!--android:id="@+id/spinner_year"-->
            <!--android:layout_width="90dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_toRightOf="@id/spinner_month"-->
            <!--android:layout_below="@id/product_name_edittext"-->

            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_marginTop="8dp"/>-->
        <DatePicker
        android:id="@+id/calender_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/expiry_date"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        />
        <TextView

            android:textColor="#463d3d"
            android:id="@+id/product_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Description"
            android:layout_below="@id/calender_view"
            android:layout_marginTop="50dp"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/product_desc_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@id/product_desc"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"/>
        <TextView
            android:textColor="#463d3d"
            android:id="@+id/product_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Type"
            android:layout_below="@id/product_desc_edittext"
            android:layout_marginTop="50dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            />
        <Spinner
            android:id="@+id/product_type_spinner"
            android:layout_width="200dp"
            android:textAlignment="center"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/product_id"
            android:layout_below="@id/product_desc_edittext"
            android:entries="@array/product_type"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"/>

        <TextView
            android:textColor="#463d3d"
            android:id="@+id/Product_environment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stored in Refrigerator"
            android:layout_below="@id/product_type"
            android:layout_marginTop="50dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            />
        <Switch
            android:id="@+id/product_environment_switch"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/Product_environment"
            android:layout_below="@id/product_type_spinner"
            android:entries="@array/product_type"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@id/product_environment_switch"
            android:layout_centerHorizontal="true"
            android:background="@drawable/track_eatsoon"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"
            android:onClick="track"/>











    </RelativeLayout>
</ScrollView>
























</android.support.constraint.ConstraintLayout>
